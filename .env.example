# =============================================================================
# SKILL GAP ANALYZER - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env.local for development
# Never commit actual .env files with real credentials to version control
# =============================================================================

# -----------------------------------------------------------------------------
# APPLICATION SETTINGS
# -----------------------------------------------------------------------------
# Application environment (development, staging, production)
NODE_ENV=development

# Application URL (used for OAuth callbacks and CORS)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Application name and version
NEXT_PUBLIC_APP_NAME="Skill Gap Analyzer"
NEXT_PUBLIC_APP_VERSION=1.0.0

# -----------------------------------------------------------------------------
# AI SERVICE CONFIGURATION
# -----------------------------------------------------------------------------
# AI Service API endpoint (replace with your actual AI service URL)
AI_SERVICE_API_ENDPOINT=https://api.your-ai-service.com/v1

# AI Service API key (get from your AI service provider)
AI_SERVICE_API_KEY=your_ai_service_api_key_here

# Rate limiting (requests per hour)
AI_SERVICE_RATE_LIMIT=100

# Request timeout in seconds
AI_SERVICE_TIMEOUT=30

# Number of retry attempts for failed requests
AI_SERVICE_RETRY_ATTEMPTS=3

# Data privacy level: basic, enhanced, maximum
AI_SERVICE_PRIVACY_LEVEL=enhanced

# -----------------------------------------------------------------------------
# GITHUB INTEGRATION
# -----------------------------------------------------------------------------
# GitHub OAuth App credentials (for private repo access)
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# GitHub Personal Access Token (for public repo analysis)
GITHUB_ACCESS_TOKEN=ghp_your_github_personal_access_token

# GitHub API base URL (usually doesn't need to change)
GITHUB_API_URL=https://api.github.com

# -----------------------------------------------------------------------------
# LEARNING PLATFORM INTEGRATIONS
# -----------------------------------------------------------------------------
# Coursera API credentials
COURSERA_CLIENT_ID=your_coursera_client_id
COURSERA_CLIENT_SECRET=your_coursera_client_secret

# Udemy API credentials
UDEMY_CLIENT_ID=your_udemy_client_id
UDEMY_CLIENT_SECRET=your_udemy_client_secret

# LinkedIn Learning API credentials
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret

# -----------------------------------------------------------------------------
# DATABASE CONFIGURATION
# -----------------------------------------------------------------------------
# Database URL (PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@localhost:5432/skillgap_dev

# Database connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# -----------------------------------------------------------------------------
# AUTHENTICATION & SECURITY
# -----------------------------------------------------------------------------
# NextAuth.js secret (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here

# NextAuth.js URL (should match NEXT_PUBLIC_APP_URL)
NEXTAUTH_URL=http://localhost:3000

# JWT signing key (generate with: openssl rand -base64 64)
JWT_SECRET=your_jwt_secret_here

# Session encryption key
SESSION_SECRET=your_session_secret_here

# -----------------------------------------------------------------------------
# EXTERNAL SERVICES
# -----------------------------------------------------------------------------
# Email service (SendGrid, Mailgun, etc.)
EMAIL_SERVICE_API_KEY=your_email_service_api_key
EMAIL_FROM_ADDRESS=noreply@yourapp.com

# Analytics service (Google Analytics, Mixpanel, etc.)
NEXT_PUBLIC_ANALYTICS_ID=your_analytics_id

# Error tracking (Sentry, Bugsnag, etc.)
SENTRY_DSN=your_sentry_dsn
NEXT_PUBLIC_SENTRY_DSN=your_public_sentry_dsn

# -----------------------------------------------------------------------------
# REDIS CONFIGURATION (for caching and sessions)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# -----------------------------------------------------------------------------
# MONITORING & LOGGING
# -----------------------------------------------------------------------------
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable performance monitoring
ENABLE_PERFORMANCE_MONITORING=true

# Health check endpoint secret
HEALTH_CHECK_SECRET=your_health_check_secret

# -----------------------------------------------------------------------------
# FEATURE FLAGS
# -----------------------------------------------------------------------------
# Enable/disable features for gradual rollout
FEATURE_GITHUB_PRIVATE_REPOS=true
FEATURE_LEARNING_PLATFORMS=true
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_SKILL_CHALLENGES=false

# -----------------------------------------------------------------------------
# DEVELOPMENT SETTINGS
# -----------------------------------------------------------------------------
# Enable debug mode
DEBUG=false

# Mock external services in development
MOCK_AI_SERVICE=false
MOCK_GITHUB_API=false

# Disable SSL verification in development (not recommended for production)
NODE_TLS_REJECT_UNAUTHORIZED=1
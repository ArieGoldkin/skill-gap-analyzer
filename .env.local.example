# =============================================================================
# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# =============================================================================
# This file contains minimal configuration for local development
# Copy this to .env.local and fill in your actual values
# =============================================================================

# Basic application settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# AI Service (required for core functionality)
AI_SERVICE_API_ENDPOINT=https://api.your-ai-service.com/v1
AI_SERVICE_API_KEY=your_ai_service_api_key_here

# GitHub integration (optional for development)
GITHUB_ACCESS_TOKEN=ghp_your_github_token_for_public_repos

# Authentication (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Database (optional - uses mock data if not provided)
DATABASE_URL=postgresql://localhost:5432/skillgap_dev

# Feature flags for development
FEATURE_AI_RECOMMENDATIONS=true
MOCK_AI_SERVICE=true